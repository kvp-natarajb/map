<div class="page-header">
  <%= link_to new_allotment_path, class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    New Allotment
  <% end %>
  <h1>Listing allotments</h1>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
            <th>Date</th>
            <th>Position</th>
            <th>User</th>
            <th>Place</th>
            <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @allotments) do |allotment| %>
            <td><%= allotment.date %></td>
            <td><%= allotment.position %></td>
            <td><%= allotment.user %></td>
            <td><%= allotment.place %></td>
            <td><%= link_to 'Show', allotment %></td>
        <td><%= link_to 'Edit', edit_allotment_path(allotment) %></td>
        <td><%= link_to 'Destroy', allotment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      <% end %>
    </tbody>
  </table>
</div>
