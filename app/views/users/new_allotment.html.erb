<p>
  <strong>Name:</strong> 
  <%= @place.name %>
</p>

<p>
  <strong>Address:</strong> 
  <%= @place.address %>
</p>


<%= form_for(@allotment, url: create_allotment_path, html: { class: "form-horizontal", role: "form" }, remote: true) do |f| %>
  <div class="form-group">
    <%= f.label :date, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :date, class: "form-control datepicker" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :user, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
       <%= f.select :user_id, User.all.collect { |p| [ p.name, p.id ] }%>
    </div>
  </div>
  <%= f.hidden_field :place_id, class: "form-control",  value: @place.id %>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit "Add Location", class: "btn btn-primary" %>
    </div>
  </div>
<% end %>

