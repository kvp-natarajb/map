<table class="table table-striped table-bordered table-hover">
    <thead>
        <tr>
            <th>Name</th>
            <th>Address</th>
            <th></th>
            <th></th>
            <th></th>
        </tr>
    </thead>

    <tbody>
        <%= content_tag_for(:tr, @places_list) do |place| %>
            <td>
                <%= place.name %>
            </td>
            <td>
                <%= place.address %>
            </td>
            <td>
                <%= link_to 'Show', users_path %>
            </td>
            <td>
                <%= link_to 'Edit', edit_place_path(place) %>
            </td>
            <td>
                <%= link_to 'Destroy', place, method: :delete, data: { confirm: 'Are you sure?' } %>
            </td>
            <% end %>
    </tbody>
</table>